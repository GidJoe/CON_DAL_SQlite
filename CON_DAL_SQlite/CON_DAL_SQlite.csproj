    <UserSecretsId>4ca2659e-0fef-4d5a-9e22-4f8c87633cb6</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="2.2.7" />
